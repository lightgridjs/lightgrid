{
  "compilerOptions": {
    "target": "es2022",
    "useDefineForClassFields": true,
    "module": "ES2020",
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",

    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,

    "types": ["@maverick-js/signals/dist/types"],
    "typeRoots": ["@maverick-js/signals/dist/types"],

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["@maverick-js/signals", "src"]
}
